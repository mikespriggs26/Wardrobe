@{
    ViewBag.Title = "Home Page";
}



<div id="carousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#carousel" data-slide-to="0" class="active"></li>
        <li data-target="#carousel" data-slide-to="1"></li>
        <li data-target="#carousel" data-slide-to="2"></li>
        <li data-target="#carousel" data-slide-to="3"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Content/shirt.jpg" class="img-responsive carPic" />
            <div class="carousel-caption">
                @Html.ActionLink("TOPS", "Index", "Tops")
            </div>
        </div>
        <div class="item">
            <img src="~/Content/Khakis2.jpeg" />
            <div class="carousel-caption">
               @Html.ActionLink("BOTTOMS", "Index", "Bottoms")
            </div>
        </div>
        <div class="item">
            <img src="~/Content/shoe.jpg" />
            <div class="carousel-caption">
                @Html.ActionLink("SHOES", "Index", "Shoes")
            </div>
        </div>
        <div class="item">
            <img src="~/Content/watch.jpg" />
            <div class="carousel-caption">
               @Html.ActionLink("ACCESSORIES", "Index", "Accessories")                   
            </div>
        </div>
    </div>
    <!-- Controls -->
    <a class="left carousel-control" href="#carousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="right carousel-control" href="#carousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
</div> <!-- Carousel -->